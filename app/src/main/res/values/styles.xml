<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>


    <style name="Widget">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="Widget.Subtitle">
        <item name="android:textSize">@dimen/subtitle_size</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">@dimen/drawable_padding</item>
    </style>

    <style name="Widget.ShareText">
        <item name="android:textSize">18sp</item>
        <item name="android:scaleX">0</item>
        <item name="android:scaleY">0</item>
        <item name="android:textColor">@color/share_color</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">@dimen/drawable_padding</item>
    </style>

    <style name="Widget.MainTitle">
        <item name="android:textSize">@dimen/main_title_size</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
    </style>
</resources>
